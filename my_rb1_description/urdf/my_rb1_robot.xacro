<?xml version="1.0"?>
<robot name = "my_rb1_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:property name="halfpi" value="1.57079632679" />

    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo>
        <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
            <alwaysOn>true</alwaysOn>
            <updateRate>20</updateRate>
            <leftJoint>lwheel_joint</leftJoint>
            <rightJoint>rwheel_joint</rightJoint>
            <wheelSeparation>0.2</wheelSeparation>
            <wheelDiameter>0.025</wheelDiameter>
            <torque>10</torque>
            <commandTopic>cmd_vel</commandTopic>
            <odometryTopic>odom</odometryTopic>
            <odometryFrame>odom</odometryFrame>
            <robotBaseFrame>base_link</robotBaseFrame>
        </plugin>
    </gazebo>

    <gazebo reference="front_caster">
        <material>Gazebo/Grey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>

    <gazebo reference="back_caster">
        <material>Gazebo/Grey</material>
        <mu1>0</mu1>
        <mu2>0</mu2>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
        <mu1>1</mu1>
        <mu2>1</mu2>
    </gazebo>

    
    <joint name="laser_joint" type="fixed">
        <parent link="base_link"/>
        <axis xyz = "0 1 0"/>
        <child link="front_laser"/>
        <origin xyz="0.25 0.0 0.075" rpy="${halfpi*2} 0 0" />
    </joint>

    <link name="front_laser">
    </link>
        


    <gazebo reference="front_laser">
        <sensor type="ray" name="head_hokuyo_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>20</update_rate>
            <alwaysOn>true</alwaysOn>
            <ray>
                <scan>
                    <horizontal>
                        <samples>720</samples>
                        <resolution>1</resolution>
                        <min_angle>-${halfpi}</min_angle>
                        <max_angle>${halfpi}</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.10</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_laser.so">
                <topicName>/laser/scan</topicName>
                <frameName>front_laser</frameName>
            </plugin>
        </sensor>
    </gazebo>

    <joint name="dummy_joint" type="fixed">
        <parent link="dummy"/>
        <child link="base_link"/>
    </joint>

    <link name = "dummy"/>
    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 -0.15" rpy="0 0 0"/>
    </joint>

    <link name = "base_footprint"/>

    <link name="base_link">
        <inertial>
            <mass value="25"/>
            
            <inertia ixx="0.578" ixy="0" ixz="0" iyy="0.578" iyz="0" izz="0.78" />
        </inertial>

        <collision>
            
            <geometry>
                <cylinder length="0.3" radius = "0.25"/>
            </geometry>
        </collision>

        <visual>
            
            <geometry>
                <cylinder length="0.3" radius = "0.25"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 0.7" />
            </material>
        </visual>
    </link>

    <joint name="rwheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin  rpy="0 0 0" xyz = "0 -0.2 -0.15"/>
        <axis rpy="0 0 0" xyz = "0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="right_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="25" />
            <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742" />
        </inertial>

        <collision>
            <origin  rpy="${halfpi} 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.03" radius = "0.025"/>
            </geometry>
        </collision>

        <visual>
            <origin  rpy="${halfpi} 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.04" radius = "0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>
   
    <joint name="lwheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin  rpy="0 0 0" xyz = "0 0.2 -0.15"/>
        <axis rpy="0 0 0" xyz = "0 1 0" />
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="left_wheel">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="25" />
            <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742" />
        </inertial>

        <collision>
            <origin  rpy="${halfpi} 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.03" radius = "0.025"/>
            </geometry>
        </collision>

        <visual>
            <origin  rpy="${halfpi} 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder length="0.03" radius = "0.025"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1" />
            </material>
        </visual>
    </link>

    <joint name="fcaster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_caster"/>
        <origin xyz="0.1 0 -0.15" rpy="0 0 0" />
        <joint_properties  friction="0.0" />
    </joint>

    <link name="front_caster">
        <inertial>
            <mass value="25" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742" />
        </inertial>

        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Black">
                <color rgba="1 1 1 1" />
            </material>
        </visual>
    </link>

    <joint name="bcaster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_caster"/>
        <origin xyz="-0.1 0 -0.15" rpy="0 0 0" />
        <joint_properties  friction="0.0" />
    </joint>

    <link name="back_caster">
        <inertial>
            <mass value="25" />
            <origin xyz="0 0 0" rpy="0 0 0" />
            <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742" />
        </inertial>

        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Black">
                <color rgba="1 1 1 1" />
            </material>
        </visual>
    </link>

    
</robot>